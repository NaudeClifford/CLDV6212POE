@model IEnumerable<ABCRetails.Models.Customer>
@{
    ViewData["Title"] = "Customers";
    var currentUser = User.Identity.Name;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Customers</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Customer
        </a>
    }
</div>

@if (User.IsInRole("Admin"))
{
    <div class="mb-3">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control me-2" placeholder="Search by First Name, Last Name or Username" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Name</td>
                        <td>@customer.Surname</td>
                        <td>@customer.Username</td>
                        <td>@customer.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (User.IsInRole("Admin") || customer.Username == currentUser)
                                {
                                    @if (!string.IsNullOrEmpty(customer.Id))
                                    {
                                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    }
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@customer.Id', '@customer.Username')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No customers found.
    </div>
}

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete account <strong id="customerName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(customerId, customerUsername) {
            document.getElementById('customerName').textContent = customerUsername;
            document.getElementById('deleteForm').action = '/Customer/Delete/' + customerId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
