@model IEnumerable<ABCRetails.Models.Product>
@using System.Globalization
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-box"></i> Products</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    }
</div>

<form class="mb-3" method="get" asp-action="Index">
    <div class="input-group">
        <input type="text" name="searchString" value="@(ViewData["CurrentFilter"] ?? "")" class="form-control" placeholder="Search by Product Name or ID" />
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-search"></i> Search
        </button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock Available</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <!-- Product Image -->
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.ProductName" class="img-thumbnail" style="width:50px; height:50px; object-fit:cover;" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="width:50px; height:50px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            }
                    </td>

                    <!-- Product ID -->
                    <td>
                        <code>@(product.Id?.Length > 8 ? product.Id.Substring(0, 8) + "..." : product.Id)</code>
                    </td>

                    <!-- Product Name -->
                    <td>@product.ProductName</td>

                    <!-- Description -->
                    <td>
                        @(string.IsNullOrEmpty(product.Description)
                                            ? ""
                                            : product.Description.Length > 50
                                            ? product.Description.Substring(0, 50) + "..."
                                            : product.Description)
                </td>

                        <!-- Price -->
                        <td>
                            <strong class="text-success">@string.Format(CultureInfo.CurrentCulture, "{0:C}", product.Price)</strong>
                    @if (product.Price <= 0)
                            {
                                <br />
                                <small class="text-danger">⚠️ Price not set</small>
                            }
                        </td>

                        <!-- Stock -->
                        <td>
                            <span class="badge bg-@(product.StockAvailable > 10 ? "success" : product.StockAvailable > 0 ? "warning" : "danger")">
                                @product.StockAvailable
                            </span>
                        </td>

                        <!-- Actions -->
                        @if (User.IsInRole("Admin") || User.IsInRole("Customer"))
                        {
                            <td>
                                <div class="d-flex flex-column gap-1">
                                    @* Admin Actions *@
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@product.Id', '@product.ProductName')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }

                                    @* Customer Actions *@
                                    @if (User.IsInRole("Customer"))
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-1 mt-1">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="number" name="quantity" value="1" min="1" class="form-control form-control-sm" style="width:70px;" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-cart-plus"></i> Add
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found.
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="alert-link">Add your first product</a>
            
            }
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete product <strong id="productName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(productId, productName) {
            document.getElementById('productName').textContent = productName;
            document.getElementById('deleteForm').action = '/Product/Delete/' + productId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
