@model ABCRetails.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<h2><i class="fas fa-user-cog"></i> My Profile</h2>

<div class="card mt-3" style="max-width: 600px;">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Username</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Phone Number</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4">Role</dt>
            <dd class="col-sm-8">Admin</dd>
        </dl>

        <a asp-action="Edit" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit Profile
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Success"]
    </div>
}
